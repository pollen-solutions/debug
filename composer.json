{
  "name": "pollen-solutions/debug",
  "description": "Pollen Solutions - Debug Component - Collection of debugging tools.",
  "homepage": "https://www.presstify.com/pollen-solutions/debug/",
  "keywords": [
    "presstify",
    "components",
    "debug"
  ],
  "type": "presstify-component",
  "time": "2021-07-09",
  "license": "MIT",
  "authors": [
    {
      "name": "Jordy Manner",
      "email": "jordy.manner@milkcreation.fr"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "filp/whoops": "^2.9",
    "maximebf/debugbar": "^1.16",
    "pollen-solutions/event": "^1.0",
    "pollen-solutions/http": "^1.0",
    "pollen-solutions/support": "^1.0",
    "pollen-solutions/routing": "^1.0",
    "symfony/error-handler": "^5.2",
    "symfony/var-dumper" : "^5.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "Pollen\\Debug\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pollen\\Debug\\Test\\": "tests"
    }
  },
  "suggest": {
    "pollen-solutions/asset": "Pollen Solutions - Asset Component - Tools to manage assets in web applications.",
    "pollen-solutions/container" : "Pollen Solutions - Container Component - PSR-11 ready Dependencies Injection Container."
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
